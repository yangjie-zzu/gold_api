{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "esModuleInterop": true,
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "outDir": "dist"
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}